                      case 1:matricula();
					  break;
                      case 2:buscar(); 
					  break;
                      case 3:modificar(); 
					  break;
                      case 4:reg_profesor(); 
					  break;
                      case 5:repetir=0; break;
                      default: cout <<"Error. Dato Invalido!! "<<endl; getch();break;
                    }
                }
                  }
 
